<?xml version="1.0" encoding="utf-8" ?>
<!-- XSD manual extracted from package NLog.Schema: https://www.nuget.org/packages/NLog.Schema-->
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xsi:schemaLocation="NLog NLog.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	autoReload="true"
	internalLogFile="c:\\logs\\console-example-internal.log"
	internalLogLevel="Info" >

	<!-- the targets to write to -->
	<targets>
		<!-- write logs to the files -->
		<target xsi:type="File" name="trace_logs" fileName="c:\\logs\\trace.log" archiveFileName="c:\\logs\\trace.{#}.txt" archiveEvery="Day"
        maxArchiveFiles="30" archiveNumbering="Date"
        enableArchiveFileCompression="true" />
		<target xsi:type="File" name="error_logs" fileName="c:\\logs\\error.log" archiveFileName="c:\\logs\\error.{#}.txt" archiveEvery="Day"
        maxArchiveFiles="30" archiveNumbering="Date"
        enableArchiveFileCompression="true" />
		<!-- write logs to the console-->
		<target xsi:type="Console" name="logconsole" />
	</targets>

	<!-- rules to map from logger name to target -->
	<rules>
		<logger name="*" minlevel="Trace" writeTo="trace_logs" />
		<logger name="*" minlevel="Error" writeTo="error_logs" />

	</rules>
</nlog>

